// variabeles
responsa = {
  gutter: 20px,
  max-width: 1024px,
  padding: 10px
}


// functions
container(width, pad = responsa.padding)
    width_calc = (width - (pad * 2))

    margin 0 auto
    max-width unit(width, 'px')
    padding 0 pad

    &:after
        visibility: hidden;
        display: block;
        font-size: 0;
        content: " ";
        clear: both;
        height: 0;

column(column_width, gutter = responsa.gutter, max-width = responsa.max-width, col = false)
    t = calculate(column_width, gutter, max-width)
    tt = unit(t, '%')

    float left
    max-width tt

    if (col == false)
        margin-right responsa_margin(gutter, max-width)
    else
        margin-right 0

calculate(val, gutter, total)
    t = ((val - gutter) * 100) / total
    return t

responsa_margin(gutter, total)
    g = (gutter * 100) / total
    return unit(g, '%')

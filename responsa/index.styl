// variabeles
responsa = {
  gutter: 10px,
  max-width: 1024px
}


// functions
container(width, pad = responsa.gutter)
    width_calc = (width - (pad * 2))

    margin 0 auto
    max-width unit(width_calc, 'px')
    padding 0 pad

    &:after
        visibility: hidden;
        display: block;
        font-size: 0;
        content: " ";
        clear: both;
        height: 0;

column(column_width, gutter = responsa.gutter, max-width = responsa.max-width, col = false)
    t = calculate(column_width, gutter, max-width)
    tt = unit(t, '%')

    float left
    padding 0 gutter
    width tt

cf()
  *zoom: 1

  &:before, &:after
    content: ''
    display: table

  &:after
    clear: both


row(gutter=responsa.gutter)
  margin-right gutter - (gutter * 2)
  margin-left gutter - (gutter * 2)

// helpers
calculate(val, gutter, total)
    t = ((val - (gutter * 2)) * 100) / total
    return t

responsa_margin(gutter, total)
    g = (gutter * 100) / total
    return unit(g, '%')
